@model IEnumerable<Mvc_Api_Call.Models.EmpModelCont>
@{
    ViewBag.Title = "Index";
}
<h2></h2>
<div class="col-md-12">
    <p>
        @Html.ActionLink("Add New", "AddEdit")
    </p>
</div>

<div class="col-md-12">
    <table class="table table-responsive table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Location</th>
                <th>Designation</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @item.Location
                    </td>
                    <td>
                        @item.Designation
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "AddEdit",new { id = @item.EmployeeId}, new { @class = "su-btn" })
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new { id = @item.EmployeeId }, new { @class = "su-btn" })
                    </td>
                </tr>
            }
        </tbody>


    </table>
</div>
